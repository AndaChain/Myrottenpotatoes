-# in app/views/movies/show.html.haml
%h1 Details about #{@movie.title}

%h3 Rating:
= @movie.rating

%h3 Released on:
= @movie.release_date.strftime("%B %d, %Y")

%h3 Description:
= @movie.description

%h5
  = link_to 'Edit info', edit_movie_path(@movie) ,  class: 'btn'

  = link_to 'Delete', movie_path(@movie), :method => :delete ,  class: 'btn'
  
%h5
  = link_to 'Back to movie list', movies_path ,  class: 'btn'

  = link_to 'Show All Review', movie_reviews_path(@movie) ,  class: 'btn'