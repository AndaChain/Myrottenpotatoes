-# in app/views/movies/show.html.haml

%h1 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:
%p.a{:class => "disc"}= @movie.description

%h2
  = link_to 'Edit info', edit_movie_path(@movie) ,  class: 'btn', target: "_blank"

  = link_to 'Show All Review', movie_reviews_path(@movie) ,  class: 'btn', target: "_blank"

  = link_to 'Back to movie list', movies_path ,  class: 'btn', target: "_blank"

  = link_to 'Delete', movie_path(@movie), :method => :delete ,  class: 'btn', target: "_blank"

